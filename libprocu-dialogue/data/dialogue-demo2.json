        { "id": "2",
          "type": "node",
          "actor": "Jenek",
          "components": [
            { "type": "component-text",
              "text": "Ahh, that's right. You're here about the jump drive!",
              "next-node-id": "3" }
          ]
        },

        { "comment": "___node___",
          "id": "7",
          "type": "node",
          "components": [
            { "type": "component-text",
              "text": "So you're interested in the jump drive now?",
