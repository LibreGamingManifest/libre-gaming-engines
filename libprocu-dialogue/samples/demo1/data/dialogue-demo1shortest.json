      "nodes": [
        { "comment": "___node___",
          "id": "1",
          "type": "node-init",
          "actor": "Narrator",
          "next-node-id": "end",
          "components": [
            { "type": "component-text",
              "text": "The Aera have invaded the Union of Dispossessed Settlers seeking to carve a path through human space to the coreward regions of the jump network.\nYou are Deucalion, a human raised by the Klkâ€™k on Ktah, who just got his ship repaired after an emergency landing on Cephid 17 caused by a Luddite attack that cost hist best friend Lauktk his life.\nYou find yourself in the bar on the orbital station above Cephid 17 talking with Jenek, a ship dealer.",
              "next-node-id": "2" }
          ]
        },

        { "id": "2",
          "type": "node",
          "actor": "Jenek",
          "components": [
            { "type": "component-text",
              "text": "[Jenek] Ahh, that's right. You're here about the jump drive!",
              "next-node-id": "3" }
          ]
        },

        { "comment": "___node___",
          "id": "7",
          "type": "node",
          "components": [
            { "type": "component-text",
              "text": "So you're interested in the jump drive now?",
              "next-node-id": "3" }
          ]
        },

        { "comment": "___node___",
          "id": "3",
          "type": "node",
          "uuid": "CA66C1494A5208F97F7B908C24F91234",
          "actor": "Jenek",
          "components": [
            { "type": "component-selection",
              "items": [
                { "text": "Yeah, I'm interested.",
                  "next-node-id": "4" },
                { "text": "Depends ...",
                  "next-node-id": "5" },
                { "text": "That's not what I'm here about.",
                  "next-node-id": "6" }
              ]
            }
          ]
        },

        { "comment": "___node___",
          "id": "4",
          "type": "node",
          "components": [
            { "type": "component-text",
              "text": "Here you go. It's being installed as we speak.\nWell, what are you waiting for? Go and give it a spin!",
              "next-node-id": "end" }
          ]
        },

        { "comment": "___node___",
          "id": "5",
          "type": "node",
          "components": [
            { "type": "component-text",
              "text": "I see ... Let me give you a very special price.",
              "next-node-id": "7" }
          ]
        },

        { "comment": "___node___",
          "id": "6",
          "type": "node",
          "components": [
            { "type": "component-text",
              "text": "Dammit. I knew there would be no business to be done on this day!",
              "next-node-id": "end" }
          ]
        },


        { "comment": "___node___",
          "id": "end",
          "type": "node-exit",
          "components": [
            { "type": "component-text",
              "text": "Thank you and good bye o/" }
